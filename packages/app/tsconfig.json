{
  "include": ["src", "types"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "jsx": "react",
    "module": "esnext",
    "baseUrl": "./",
    "paths": {
      "/@/*": ["src/*"],
      "react": ["@pika/react"],
      "react-dom": ["@pika/react-dom"]
    }
  }
}
