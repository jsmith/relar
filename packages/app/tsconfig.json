{
  "include": ["src"],
  "exclude": ["node_modules", "src/shared/node/**"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "jsx": "react",
    "module": "esnext",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "react": ["@pika/react"],
      "react-dom": ["@pika/react-dom"]
    }
  }
}
