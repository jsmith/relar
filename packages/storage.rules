rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
  	match /{userId} {
    	match /songs/{songId}/{fileName} {
      	allow get: if request.auth.uid == userId;
        allow create: if request.auth.uid == userId && fileName == 'original.mp3'
      }
      
      match /song_artwork/{songId}/{artworkFileName} {
      	allow get: if request.auth.uid == userId;
      }
    }
  }
}
