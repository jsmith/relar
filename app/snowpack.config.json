{
  "extends": "@snowpack/app-scripts-react",
  "install": [
    "firebase/app",
    "firebase/auth",
    "firebase/firestore",
    "firebase/storage",
    "firebase/analytics",
    "firebase/performance"
  ],
  "installOptions": {
    "treeShake": true
  },
  "mount": {
    "src/shared": "/_dist_/shared"
  },
  "exclude": ["**/src/shared/node/**", "**/load-env.ts"],
  "devOptions": {
    "port": 3000
  }
}
